<!DOCTYPE html>
<html>
    <head>
        <title>-</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Incluindo Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <link rel="stylesheet" href="css/style.css">
        <link rel="stylesheet" href="css/checkbox.css">
    </head>
    <body>
        <div class="container my-2 mt-5 d-flex align-items-center justify-content-center" id="criarChecklist">
            <form id="formulario" action="#" method="POST">
                <input type="hidden" name="contador" id="contador">
                <div class="row">
                    <div class="col">
                        <div class="form-floating">
                            <select name="empreendimento" id="empreendimento" class="form-control"
                                onchange="getUnidades(event)">
                                <option>Selecione</option>
                            </select>
                            <label for="empreendimento" class="form-label">empreendimento</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <select name="unidade" id="unidade" class="form-control" onchange="getChecklists(event)">
                                <option>Selecione</option>
                            </select>
                            <label for="unidade" class="form-label">unidade</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <select name="checklist" id="checklist" class="form-control" onchange="getDados(event)">
                                <option>Selecione</option>
                            </select>
                            <label for="checklist" class="form-label">checklist</label>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- Incluindo Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
            integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
            </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"
            integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous">
            </script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
        <script>
            const slt_empreendimento = document.getElementById("empreendimento")
            const slt_unidade = document.getElementById("unidade")
            const slt_checklist = document.getElementById("checklist")
            // Carrega os empreendimentos
            document.addEventListener("DOMContentLoaded", function (e) {
                fetch('http://localhost:3000/getEmpreendimentos', { method: "GET" })
                    .then(response => response.json())
                    .then(response => {
                        response.forEach(element => {
                            var option = document.createElement("option")
                            option.value = element.id
                            option.textContent = element.empreendimento
                            slt_empreendimento.append(option)
                        });
                    })
                    .catch(err => console.error(err));
            });
            // Busca as unidades do empreendimento
            function getUnidades(event) {
                event.preventDefault()
                slt_unidade.innerHTML = ""
                let empreendimento = document.getElementById("empreendimento").value
                // Busca unidades do empreendimento
                fetch(`http://localhost:3000/getUnidadesByEmp?id_empreendimento=${empreendimento}`, { method: "GET" })
                    .then(response => response.json())
                    .then(response => {
                        response.forEach(element => {
                            var option = document.createElement("option")
                            option.value = element.id
                            option.textContent = element.unidade
                            slt_unidade.append(option)
                        });
                    })
                    .catch(err => console.error(err));
            }
            // Busca os checklists disponveis
            function getChecklists(event) {
                event.preventDefault()
                slt_checklist.innerHTML = ""
                let unidade = document.getElementById("unidade").value
                // Busca unidades do unidade
                fetch(`http://localhost:3000/getChecklistByUnd?id_unidade=${unidade}`, { method: "GET" })
                    .then(response => response.json())
                    .then(response => {
                        response.length == 0 ? alert("Está unidade não possui checklist!") :
                            response.forEach(element => {
                                var option = document.createElement("option")
                                option.value = element.id
                                option.textContent = element.chk_nome
                                slt_checklist.append(option)
                            });
                    })
                    .catch(err => console.error(err));
            }
            // Busca informacoes dos checklists
            function getDados(event) {
                event.preventDefault()
                fetch(`http://localhost:3000/getChecklists`, {
                    // ?id_unidade=${unidade}
                    method: 'GET',
                    headers: {
                        'Accept': 'application/json',
                    },
                })
                    .then(response => response.json())
                    .then(response => {
                        var checklistFinded = response.find(el => el.id_checklist == document.getElementById("checklist").value)
                        console.log(checklistFinded)
                    })
            }
        </script>
    </body>
</html>